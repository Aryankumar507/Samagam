<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryDark">@color/dark_grey</item>
        <item name="colorAccent">@color/dark_grey</item>
        <item name="colorControlHighlight">@color/dark_pink</item>

        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="TitleText">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TitleText.Large">
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>

    <style name="TitleText.Normal">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:numStars">5</item>
        <item name="android:isIndicator">true</item>
        <item name="android:progressTint">@color/dark_pink</item>
        <item name="android:progressBackgroundTint">@color/red</item>
    </style>

    <style name="VoteCountText">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="ConText">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:drawablePadding">@dimen/_4sdp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- New design -->
    <style name="Headline6">
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Caption">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="Body2">
        <item name="android:textSize">@dimen/_14sdp</item>

    </style>
    <style name="Body1">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Headline5">
        <item name="android:textSize">@dimen/_24sdp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Subtitle2">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
