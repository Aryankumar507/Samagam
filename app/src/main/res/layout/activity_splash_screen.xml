<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SplashScreenActivity"
    android:background="@color/black"

    >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="275sp"
       android:background="@drawable/splashscreen_background"
       android:layout_marginStart="40dp"
       android:layout_marginEnd="40dp"
       android:gravity="bottom"
       android:layout_marginTop="150sp"

       >


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="195sp"
           android:layout_marginStart="5sp"
           android:layout_marginEnd="45sp"
           android:layout_marginBottom="5sp"
           android:background="@drawable/splashscreen_blackcurve"
           android:orientation="vertical"
           android:gravity="bottom">
           <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="SAMAGAM"
           android:textSize="50sp"
           android:textColor="#1BFFFFFF"
           android:textStyle="bold"
              />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="SAMAGAM"
               android:textSize="50sp"
               android:textColor="#4BFFFFFF"
               android:textStyle="bold"
               android:layout_marginTop="-24dp"

               />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="SAMAGAM"
               android:textSize="50sp"
               android:textColor="#9CFFFFFF"
               android:textStyle="bold"
               android:layout_marginTop="-26dp"
               />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="SAMAGAM"
               android:textSize="50sp"
               android:textColor="@color/white"
               android:textStyle="bold"
               android:layout_marginTop="-26dp"

               />
       </LinearLayout>


   </LinearLayout>

</LinearLayout>