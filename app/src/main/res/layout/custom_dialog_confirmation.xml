<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="#0FA1F3"
    android:layout_height="wrap_content"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/event_colourfull_backgroud">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:background="@drawable/event_black_background"
                    >
                    <TextView
                        android:id="@+id/message"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Do You want io delete this?"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:padding="40dp"
                        android:orientation="horizontal"
                        android:gravity="end"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/negative"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/buttons_color"
                            android:gravity="center"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:text="No"
                            android:textColor="@color/white" />
                        <Button
                        android:id="@+id/positive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/buttons_color"
                        android:gravity="center"
                        android:text="Yes"
                        android:textColor="@color/white" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>