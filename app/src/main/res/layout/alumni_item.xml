<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/event_colourfull_backgroud"
            android:layout_marginHorizontal="@dimen/_10sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/_20sdp"
        android:backgroundTint="#272626"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/home"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="xyz"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="position"
                android:textColor="#C3A7FE"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_10sdp"/>


            <TextView
                android:id="@+id/company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="company"
                android:textColor="#C3A7FE"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_10sdp"/>


            <TextView
                android:id="@+id/batch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="batch"
                android:textColor="#C3A7FE"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_10sdp"/>


            <TextView
                android:id="@+id/postinClub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="postinClub"
                android:textColor="#C3A7FE"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/placeofWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="placeofWork"
                android:textColor="#C3A7FE"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_10sdp"/>


            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:text="An inquisitive person, with a fervour to experience this rapidly growing tech industry. Always up for challenges and a resolute individual who believes in building things. Placed @ Oracle"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/achievement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:text="An inquisitive person, with a fervour to experience this rapidly growing tech industry. Always up for challenges and a resolute individual who believes in building things. Placed @ Oracle"
                android:textColor="@color/black" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/linkedin"
                    android:linksClickable="true"
                    android:autoLink="web"
                    android:layout_marginHorizontal="2dp"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="50dp"
                   android:background="@drawable/linkedin"
                    />

                <TextView
                    android:id="@+id/git"
                    android:linksClickable="true"
                    android:autoLink="web"
                    android:layout_marginHorizontal="2dp"

                    android:layout_width="@dimen/_50ssp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                   android:background="@drawable/github"/>
                <TextView
                    android:id="@+id/insta"
                    android:linksClickable="true"
                    android:autoLink="web"
                    android:layout_marginHorizontal="2dp"

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/instagram"
                    />

                <TextView
                    android:id="@+id/descord"
                    android:linksClickable="true"
                    android:autoLink="web"
                    android:layout_width="50dp"
                    android:layout_marginHorizontal="2dp"

                    android:layout_height="50dp"
                    android:background="@drawable/discord"
                    />

                <TextView
                    android:id="@+id/email"
                    android:linksClickable="true"
                    android:autoLink="email"
                    android:layout_width="50dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_height="50dp"
                    android:background="@drawable/mail"
                    />

                <TextView
                    android:linksClickable="true"
                    android:autoLink="web"
                    android:id="@+id/twitter"
                    android:layout_marginHorizontal="2dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/twitter"
                    />



            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>



    </ScrollView>
</LinearLayout>